<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shortly.shortlyapp.UI.Activities.Settings.ProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/scroller_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Change profile photo"
                android:textAlignment="center"
                android:textColor="@color/secondary_text_color"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:text="Profile Info"
                android:textColor="@color/primary_text_color"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ic_icon_username"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_username" />

                <TextView
                    android:id="@+id/txt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/ic_icon_username"
                    android:text="Asif Nazir"
                    android:textAlignment="textStart"
                    android:textColor="@color/secondary_text_color" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_below="@id/ic_icon_username"
                    android:layout_marginTop="4dp"
                    android:background="#ccc" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ic_icon_email"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_email_24dp" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/ic_icon_email"
                    android:text="asif.nazir@gmail.com"
                    android:textAlignment="textStart"
                    android:textColor="@color/secondary_text_color" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_below="@id/ic_icon_email"
                    android:layout_marginTop="4dp"
                    android:background="#ccc" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ic_icon_phone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_phone" />

                <TextView
                    android:id="@+id/txt_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/ic_icon_phone"
                    android:text="+4434324438"
                    android:textAlignment="textStart"
                    android:textColor="@color/secondary_text_color"
                    android:textSize="13sp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_below="@id/ic_icon_phone"
                    android:layout_marginTop="4dp"
                    android:background="#ccc" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ic_icon_gender"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_like" />

                <TextView
                    android:id="@+id/txt_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/ic_icon_gender"
                    android:text="Male"
                    android:textAlignment="textStart"
                    android:textColor="@color/secondary_text_color" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_below="@id/ic_icon_gender"
                    android:layout_marginTop="4dp"
                    android:background="#ccc" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ic_icon_privacy"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_like" />

                <TextView
                    android:id="@+id/txt_privacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/ic_icon_privacy"
                    android:text="Public"
                    android:textAlignment="textStart"
                    android:textColor="@color/secondary_text_color" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_below="@id/ic_icon_privacy"
                    android:layout_marginTop="4dp"
                    android:background="#ccc" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ic_icon_country"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_like" />

                <TextView
                    android:id="@+id/txt_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/ic_icon_country"
                    android:text="Pakistan"
                    android:textAlignment="textStart"
                    android:textColor="@color/secondary_text_color" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_below="@id/txt_country"
                    android:layout_marginTop="4dp"
                    android:background="#ccc" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ic_icon_city"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_like" />

                <TextView
                    android:id="@+id/txt_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/ic_icon_city"
                    android:text="City"
                    android:textAlignment="textStart"
                    android:textColor="@color/secondary_text_color" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_below="@id/ic_icon_city"
                    android:layout_marginTop="4dp"
                    android:background="#ccc" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp">

                <ImageView
                    android:id="@+id/ic_icon_address"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_like" />

                <TextView
                    android:id="@+id/txt_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/ic_icon_address"
                    android:text="City"
                    android:textAlignment="textStart"
                    android:textColor="@color/secondary_text_color" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_below="@id/ic_icon_address"
                    android:layout_marginTop="4dp"
                    android:background="#ccc" />
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
